{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",
    "composite": false,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "es2017"],
    "typeRoots": [
      "node_modules/@types",
    ],
  },
  "preset": "ts-jest",
  "include": [
    "src",
  ]
}
